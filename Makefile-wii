CC		:= cc
CFLAGS 	:= -O3 -flto \
`powerpc-eabi-pkg-config libcurl mbedtls --cflags` -O3 -Wall -Wextra $(MACHDEP) $(INCLUDE)
LDFLAGS := $(CFLAGS) \
-lcurl -lz -lmbedtls -lmbedcrypto -lmbedx509 -lwiisocket -logc -lm
TARGET  := myapp
SRCS    := $(wildcard wii/*.c)
OBJS    := $(patsubst %.c,%.o,$(SRCS))
all: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) $(LDFLAGS) -o $(TARGET) 
