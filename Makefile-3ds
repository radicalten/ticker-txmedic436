.SUFFIXES:
export DEVKITPRO 	:= /opt/devkitpro
export DEVKITARM	:= $(DEVKITPRO)/devkitARM
include $(DEVKITARM)/3ds_rules
CC		:= cc
MACHDEP := -DPLATFORM_3DS=1 -march=armv6k -mtune=mpcore -fomit-frame-pointer -ffunction-sections
INCLUDES +=
CFLAGS 	:= -O3 -flto \
$(INCLUDES) $(MACHDEP)
LDFLAGS := $(CFLAGS) \
-lctru -lcurl -lm
TARGET  := myapp
SRCS    := $(wildcard 3ds/*.c)
OBJS    := $(patsubst %.c,%.o,$(SRCS))
all: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) $(LDFLAGS) -o $(TARGET) 
