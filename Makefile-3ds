.SUFFIXES:
export DEVKITPRO 	:= /opt/devkitpro
export DEVKITARM	:= $(DEVKITPRO)/devkitARM
include $(DEVKITARM)/3ds_rules
CC		:= cc
CFLAGS 	:= -O3 -flto
LDFLAGS := $(CFLAGS) \
-lcurl -lm
TARGET  := myapp
SRCS    := $(wildcard 3ds/*.c)
OBJS    := $(patsubst %.c,%.o,$(SRCS))
all: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) $(LDFLAGS) -o $(TARGET) 
